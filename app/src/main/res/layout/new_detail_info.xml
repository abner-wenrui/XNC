<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:padding="14dp">

    <ImageView
        android:layout_marginRight="5dp"
        android:id="@+id/new_image_info"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="#a000"
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_demo"/>

    <TextView
        android:id="@+id/new_name_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/new_image_info"
        android:ellipsize="end"
        android:lines="3"
        android:textColor="#000"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/new_time_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_name_info"
        android:layout_toRightOf="@id/new_image_info"
        android:layout_marginTop="5dp"
        android:lines="1"
        android:textColor="#8000"
        android:textSize="18sp"/>
</RelativeLayout>